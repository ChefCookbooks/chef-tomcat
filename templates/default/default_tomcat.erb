#
# Dynamically generated by Chef on <%= node["fqdn"] %>
#
# Local modifications will be overwritten by Chef.
#

SHUTDOWN_WAIT=<%= node['tomcat']["shutdown_wait"] %>
TOMCAT_USER=<%= node['tomcat']["user"] %>
TOMCAT_GROUP=<%= node['tomcat']["group"] %>
JAVA_HOME=<%= node["java"]["java_home"] %>
CATALINA_HOME=<%= node['tomcat']["home"] %>
CATALINA_BASE=<%= node['tomcat']["base"] %>
CATALINA_PID="/var/run/<%= node['tomcat']["pid_file"] %>"

JAVA_OPTS="<%= node['tomcat']['jvm_opts'].join(' ') + 
 node['tomcat']['jmx_opts'].join(' ') +  " " +
 node['tomcat']['webapp_opts'].join(' ') + " " +
 node['tomcat']['more_opts'].join(' ') %>"

<% unless node['tomcat'].has_key?("jmx_password") -%>
JMX_OPTS=$JMX_OPTS" <%= "-Dcom.sun.management.jmxremote.access.file=#{node['tomcat']["jmx_access_file"]} " %> "
JMX_OPTS=$JMX_OPTS" <%= "-Dcom.sun.management.jmxremote.password.file=#{node['tomcat']["jmx_password_file"]} " %> "
<% end -%>


<% if  node['tomcat']['env'] -%>
<% node['tomcat']['env'].each do |envvar| -%>
export <%= envvar %>
<% end -%>
<% end -%>

JAVA_ENDORSED_DIRS="$CATALINA_HOME/endorsed"

# Use the Java security manager? (yes/no, default: no)
TOMCAT6_SECURITY=<%= node['tomcat']["use_security_manager"] ? "yes" : "no" %>

CATALINA_TMPDIR=<%= node['tomcat']["tmp_dir"] %>

